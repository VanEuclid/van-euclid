@model byte[]

@{
    ViewData["Title"] = "Seam Carver";
}

<style>
    .bordered {
        padding: 10px;
        border: 10px outset grey;
        border-radius: 16px;
        background-color: white;
    }

    img {
        width: 100%;
        height: 100%;
    }

    .cursoredit {
        cursor: pointer;
    }
</style>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body style="background-image: url(https://images.pexels.com/photos/1089438/pexels-photo-1089438.jpeg?auto=compress&cs=tinysrgb&dpr=3&h=750&w=1260)">
    <div class="text-center bordered">
        <h1 class="display-4">Seam Carver</h1>
        <p>
            If you wanna save the resulting image, just right click and Save Image As.<br />
            If Visible Seams is set, any white 'tears' are the seams of the algorithm or where compression of the image would happen.<br />
        </p>
        <img src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model))" /><br />
        <a class="nav-link text-dark cursoredit" onclick="location.href='@Url.Action("SeamCarve", "Portfolio")'">Back</a>
    </div>
</body>
</html>