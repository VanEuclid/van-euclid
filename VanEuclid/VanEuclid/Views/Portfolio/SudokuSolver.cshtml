@{
    ViewData["Title"] = "Sudoku Solved";
}

<style>
    .bordered {
        padding: 10px;
        border: 10px outset grey;
        border-radius: 16px;
        background-color: white;
    }

    .unsolvedBordered {
        padding: 10px;
        border: 10px outset grey;
        border-radius: 16px;
        background-color: white;
    }

    .board {
        resize: none;
    }

    .cursoredit {
        cursor: pointer;
    }
</style>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body style="background-image: url(https://images.pexels.com/photos/1089438/pexels-photo-1089438.jpeg?auto=compress&cs=tinysrgb&dpr=3&h=750&w=1260)">
    @{
        if (ViewData["success"].Equals(1))
        {
        <div class="text-center bordered">
            <h1 class="display-4">Sudoku Solver</h1>
            
            <p>
                I used inputfields for the input page and textareas for the output page for learning purposes (website design wise). <br />
                This is the solution for the input Sudoku. The solver had to backtrack @ViewData["backs"].ToString() times!
            </p>
            @{
                var index = 0;
                var colorIndex = 0;
                foreach (var cell in (IEnumerable<int>)ViewData["solution"])
                {
                    if ((colorIndex >= 0 && colorIndex <= 2) || (colorIndex >= 9 && colorIndex <= 11) || (colorIndex >= 18 && colorIndex <= 20))
                    {
                        <textarea class="board" readonly maxlength="1" style="width:50px; height:30px; background-color:#FF666E">@cell</textarea>
                    }
                    else if ((colorIndex >= 3 && colorIndex <= 5) || (colorIndex >= 12 && colorIndex <= 14) || (colorIndex >= 21 && colorIndex <= 23))
                    {
                        <textarea class="board" readonly maxlength="1" style="width:50px; height:30px; background-color:#66FF7A">@cell</textarea>
                    }
                    else if ((colorIndex >= 6 && colorIndex <= 8) || (colorIndex >= 15 && colorIndex <= 17) || (colorIndex >= 24 && colorIndex <= 26))
                    {
                        <textarea class="board" readonly maxlength="1" style="width:50px; height:30px; background-color:#C799FF">@cell</textarea>
                    }
                    else if ((colorIndex >= 27 && colorIndex <= 29) || (colorIndex >= 36 && colorIndex <= 38) || (colorIndex >= 45 && colorIndex <= 47))
                    {
                        <textarea class="board" readonly maxlength="1" style="width:50px; height:30px; background-color:#FDFF99">@cell</textarea>
                    }
                    else if ((colorIndex >= 30 && colorIndex <= 32) || (colorIndex >= 39 && colorIndex <= 41) || (colorIndex >= 48 && colorIndex <= 50))
                    {
                        <textarea class="board" readonly maxlength="1" style="width:50px; height:30px; background-color:#99E7FF">@cell</textarea>
                    }
                    else if ((colorIndex >= 33 && colorIndex <= 35) || (colorIndex >= 42 && colorIndex <= 44) || (colorIndex >= 51 && colorIndex <= 53))
                    {
                        <textarea class="board" readonly maxlength="1" style="width:50px; height:30px; background-color:#FFE499">@cell</textarea>
                    }
                    else if ((colorIndex >= 54 && colorIndex <= 56) || (colorIndex >= 63 && colorIndex <= 65) || (colorIndex >= 72 && colorIndex <= 74))
                    {
                        <textarea class="board" readonly maxlength="1" style="width:50px; height:30px; background-color:#FF99FD">@cell</textarea>
                    }
                    else if ((colorIndex >= 57 && colorIndex <= 59) || (colorIndex >= 66 && colorIndex <= 68) || (colorIndex >= 75 && colorIndex <= 77))
                    {
                        <textarea class="board" readonly maxlength="1" style="width:50px; height:30px; background-color:#CCFFCC">@cell</textarea>
                    }
                    else
                    {
                        <textarea class="board" readonly maxlength="1" style="width:50px; height:30px; background-color:#FF0070">@cell</textarea>
                    }

                    index++;
                    colorIndex++;
                    if (index == 9)
                    {
                        <br />
                        index = 0;
                    }
                }
            }
            <a class="nav-link text-dark cursoredit" onclick="location.href='@Url.Action("Sudoku", "Portfolio")'">Back</a>
        </div>
        }
        else
        {
            <div class="text-center unsolvedBordered">
                <h1 class="display-4">Sudoku Solver</h1>
                <p>No solution was found for the input Sudoku.</p>
                <a class="nav-link text-dark" asp-area="" asp-controller="Portfolio" asp-action="Sudoku">Back</a>
            </div>
        }
    }
</body>
</html>